{
  "lexicon": 1,
  "id": "com.inkreaders.exercise.post",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["title", "questions", "createdAt"],
        "properties": {
          "title": {"type": "string"},
          "format": {"type": "string"},
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["q","answer"],
              "properties": {
                "q": {"type":"string"},
                "options": {"type":"array","items":{"type":"string"}},
                "answer": {"type":"string"},
                "explain": {"type":"string"}
              }
            }
          },
          "meta": {"type":"unknown"},
          "allowRemix": {"type":"boolean"},
          "createdAt": {"type":"string","format":"datetime"}
        }
      }
    }
  }
}
